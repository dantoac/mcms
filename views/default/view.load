<div class="hero-unit">
  <h1 align="center">
    {{=title}}
  </h1>
  <p>{{=excerpt}}</p>
</div>
{{for d in dataset:}}

<div class="post-links">

  <div class="text-left">
   
    Actualizado {{=prettydate(d.modified_on)}}

  </div>

  
  <div class="text-right">
     {{=A('Editar', _href=URL(f='edit.html',args=d.id), target=request.cid,
    _class='btn btn-danger btn-mini')}}

    {{if d.mcms_public:}}
    <span class="label label-success">PÃºblico</span>

    <a class="btn btn-mini btn-primary"
       href="/{{=request.application}}/{{=request.controller}}/view/{{=d.mcms_slug}}">
      Permalink
    </a>

    {{else:}}
    <span class="label label-important">Privado</span>
    {{pass}}
    
  </div>

</div>

<div id="page-body">
  {{=XML(d.mcms_html)}}
</div>

{{pass}}
